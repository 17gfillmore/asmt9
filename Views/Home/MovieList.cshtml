@{
    @*@ViewBag.Title = "Full list of movies";*@
}

@model MovieListViewModel
<div>
    <h2>Here are the movies you've stored so far:</h2>

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent to</th>
                <th>Notes</th>

            </tr>
            
        </thead>
        <tbody>
            @foreach (Assignment3.Models.Movie x in Model.Movies)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td><a asp-action="Edit" asp-route-movieID="@x.MovieID">Update</a></td>
                    @*^^ creates an anchor tag with the movie id as the query string
                    ‘/Update?empname=name-of-employee’*@

            </tr>
            }
        </tbody>
    </table>

</div>
