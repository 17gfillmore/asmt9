@{
    ViewBag.Title = "Update";
}

@model Assignment3.Models.Movie

<a asp-action="MovieList">View all movies</a>

<h2>Update</h2>

    <form asp-action="AddMovie" method="post">
        <div>
            <label asp-for="Category">Category</label>
            <input id="Category" asp-for="Category" required />
        </div>
        <div>
            <label asp-for="Title">Title</label>
            <input id="Title" asp-for="Title" required />
        </div>
        <div>
            <label asp-for="Year">Year</label>
            <input id="Title" asp-for="Year" required />
        </div>
        <div>
            <label asp-for="Director">Director</label>
            <input id="Title" asp-for="Director" required />
        </div>
        <div>
            <label asp-for="Rating">Rating</label>
            <select asp-for="Rating" required>
                <option value="">Choose One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div>
            <label asp-for="Edited">Edited</label>
            <select asp-for="Edited">
                <option value="">Choose One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div>
            <label asp-for="LentTo">Lent To</label>
            <input id="LentTo" asp-for="LentTo" />
        </div>
        <div>
            <label asp-for="Notes">Notes</label>
            <input id="Notes" asp-for="Notes" maxlength="25" /> <!--This is limiting the notes to only be 25 characters-->
        </div>

        <button type="submit">Add Movie</button>
    </form>
